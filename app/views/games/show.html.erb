<div class="row">
  <div class="centered col-md-6">
    <h1 >TicTacToe</h1>
    <dl class="dl-horizontal pull-right">
      <div id="player1_name">
        <dt>Player: </dt>
        <dd><%= @game.player1 %></dd>
      </div>
      <div id="player2_name">
        <dt>Player: </dt>
        <dd><%= @game.player2 %></dd>
      </div>
